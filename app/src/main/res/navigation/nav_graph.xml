<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dailyWeatherFragment">

    <fragment
        android:id="@+id/dailyWeatherFragment"
        android:name="com.example.weatherapp.weather.DailyWeatherFragment"
        android:label="fragment_daily_weather"
        tools:layout="@layout/fragment_daily_weather" >
        <action
            android:id="@+id/action_dailyWeatherFragment_to_searchDialogFragment"
            app:destination="@id/searchDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/searchDialogFragment"
        android:name="com.example.weatherapp.dialogweather.SearchDialogFragment"
        android:label="fragment_search_dialog"
        tools:layout="@layout/fragment_search_dialog" >
        <argument
            android:name="getCityName"
            app:argType="string" />
    </dialog>
</navigation>