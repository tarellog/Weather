<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/to_week"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/d_margin_30dp"
    android:layout_marginBottom="@dimen/d_margin_30dp"
    android:background="@drawable/radius_weather"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/d_margin_20dp"
    android:paddingVertical="@dimen/d_margin_20dp"
    tools:background="@color/purple">

    <LinearLayout
        android:id="@+id/date_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/week"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/date"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="@tools:sample/lorem" />

    </LinearLayout>


    <TextView
        android:id="@+id/temp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/d_margin_20dp"
        android:layout_marginEnd="@dimen/d_margin_10dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:text="@tools:sample/lorem" />

    <ImageView
        android:id="@+id/cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@tools:sample/avatars" />

</LinearLayout>